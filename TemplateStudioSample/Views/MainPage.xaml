<Page
    x:Class="TemplateStudioSample.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxc="using:DevExpress.WinUI.Charts"    xmlns:Controls="using:DevExpress.WinUI.Controls"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="48">        <Grid.RowDefinitions>            <RowDefinition Height="Auto" />            <RowDefinition Height="8*" />            <RowDefinition Height="*" />        </Grid.RowDefinitions>        <Button Click="Button_Click">Reza</Button>        <TextBlock            Margin="48,0,0,0"            Text="200 000 Points (100 000 Points per Series)" />        <dxc:CartesianChart            x:Name="chart"            Grid.Row="1"            Margin="30,50,30,25"            AllowAxisXZoomScroll="True"            ToolTipEnabled="False">            <dxc:CartesianChart.AxisX>                <dxc:AxisX ShowMajorGridlines="True" />            </dxc:CartesianChart.AxisX>            <dxc:CartesianChart.AxisY>                <dxc:AxisY ShowLabels="False" />            </dxc:CartesianChart.AxisY>            <dxc:CartesianChart.Series>                <dxc:Series Data="{x:Bind Data1}" DisplayName="Series 1">                    <dxc:Series.View>                        <dxc:LineSeriesView />                    </dxc:Series.View>                </dxc:Series>                <dxc:Series Data="{x:Bind Data2}" DisplayName="Series 2">                    <dxc:Series.View>                        <dxc:LineSeriesView />                    </dxc:Series.View>                </dxc:Series>            </dxc:CartesianChart.Series>        </dxc:CartesianChart>        <Controls:RangeControl            Grid.Row="2"            MinHeight="40"            Margin="30,-10,30,15"            Background="Transparent"            ShowRangeThumbs="True">            <dxc:ChartRangeControlClient Chart="{Binding ElementName=chart}" />        </Controls:RangeControl>    </Grid>
</Page>
